{{#if listado.length }}
    {{#each listado}}
    <div class="card" >
        <article class="card__article">
            <div class="card__image" style="background-image: url('{{foto}}')">
            </div>
            <div class="card__content">
                <h3 class="card__heading">{{nombre}}</h3>
                <div class="card__description">
                    <p>{{detalles}}</p>
                </div>
            </div>
        </article>
            <div>
                <button class="boton__comprar" onclick="agregarCarrito(event,{{_id}},this)">Comprar!</button>
            </div>
    </div>
    {{/each}}
{{else}}
    <h2>No se encontraron productos</h2>
{{/if}}
